<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:id="@+id/ivpp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_user"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnonline"
        android:background="@drawable/online_round"
        app:layout_constraintEnd_toEndOf="@+id/ivpp"
        app:layout_constraintTop_toBottomOf="@+id/tvusername"
        android:visibility="gone"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    <Button
        android:id="@+id/btnoffline"
        android:background="@drawable/offline_round"
        app:layout_constraintEnd_toEndOf="@+id/ivpp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvusername"
        android:layout_width="10dp"
        android:layout_height="10dp" />


    <TextView
        android:id="@+id/tvusername"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivpp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="20sp"

        android:layout_margin="5dp"

        app:layout_constraintBottom_toBottomOf="parent"


        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnreadalert"
        app:layout_constraintStart_toEndOf="@+id/tvusername"
        android:background="@drawable/readalert"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvusername"
        android:layout_width="15dp"
        android:layout_height="15dp" />



</androidx.constraintlayout.widget.ConstraintLayout>